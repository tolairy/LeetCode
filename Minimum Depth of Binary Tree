class Solution {
public:
    int minDepth(TreeNode *root) {
        if (root == NULL) {
            return 0;
        }
        
        int left = minDepth(root->left);
        int right = minDepth(root->right);
        
        if (root->left && root->right) {
            return 1 + ((left>right)?right:left);
        } else if (left == 0) {
            return 1 + right;
        } else if (right == 0) {
            return 1 + left;
        }
        
    }
};
